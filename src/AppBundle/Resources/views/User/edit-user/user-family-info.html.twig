<div>
  {% for familyMember in familyMembers %}
  <div class="family-member">
    <div class="form-group">
      <div>
        <input type="hidden" name="family[{{familyMember.id}}][id]" value="{{ familyMember.id }}">
      </div>
      <label class="col-sm-2 control-label" for="member">称谓:</label>
      <div class="col-sm-2 controls">
        <input class="form-control member" type="text" name="family[{{familyMember.id}}][member]" value="{{ familyMember.member }}">
      </div>
      <label class="col-sm-2 control-label" for="trueName">姓名:</label>
      <div class="col-sm-3 controls">
        <input class="form-control familyName" type="text" name="family[{{familyMember.id}}][trueName]" value="{{familyMember.trueName}}">
      </div>
    </div>
    <div class="form-group">
      <label class="col-sm-2 control-label" for="age">年龄:</label>
      <div class="col-sm-2 controls">
        <input class="form-control age" type="text" name="family[{{familyMember.id}}][age]" value="{{familyMember.age}}">
      </div>
      <label class="col-sm-2 control-label" for="job">工作单位及职务:</label>
      <div class="col-sm-3 controls">
        <input class="form-control job" type="text" name="family[{{familyMember.id}}][job]" value="{{familyMember.job}}">
      </div>
    </div>
    <div class="form-group">
      <label class="col-sm-2 control-label" for="phone">联系电话:</label>
      <div class="col-sm-2 controls">
        <input class="form-control familyphone" type="text" name="family[{{familyMember.id}}][phone]" value="{{familyMember.phone}}">
      </div>
    </div>
  </div>
  {% endfor %}
  <div width="100%">
    <button type="button" class="btn btn-sm btn-success edit-family-info">新增</button>
  </div>
</div>
