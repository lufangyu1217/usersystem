{% extends 'AppBundle::modal-base.html.twig' %}

{% block title %}
    <h4>编辑部门信息</h4>
{% endblock %}

{% block body %}
<form>
  <div class="form-group">
    <label for="exampleInputEmail1">部门名称</label>
    <input type="text" class="form-control" id="exampleInputEmail1" name="name" value="{{department.name}}">
  </div>
</form>
{% endblock %}

{% block footer %}
  <button type="button" class="btn btn-default edit-department" data-url="{{path('admin_edit_department', {id:id})}}">保存
  </button>
{% endblock %}